@{
    Layout = "_Layout";
}
@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Restaurant>;

<h1>Restaurants in @ViewBag.CuisineName</h1>

@if (Model.Count == 0)
{
  <h3>No restaurants have been added in this cuisine yet.</h3>
}
<ul>
  @foreach (Restaurant restaurant in Model)
  {
    <li>@Html.ActionLink($"{restaurant.Name}", "Details", "Restaurants", new {id = restaurant.RestaurantId})</li>
  }
</ul>

<p>@Html.ActionLink("Back to cuisines", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>