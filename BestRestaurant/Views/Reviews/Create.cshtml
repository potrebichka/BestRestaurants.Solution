@{
    Layout = "_Layout";
}

<h1>Add review for @ViewBag.currentRestaurant.Name @ViewBag.currentRestaurant.RestaurantId</h1>

@model BestRestaurants.Models.Review
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)

    @Html.LabelFor(model => model.Rating)
    @Html.TextBoxFor(model => model.Rating)

    @Html.LabelFor(model => model.Title)
    @Html.TextBoxFor(model => model.Title)

    @Html.LabelFor(model => model.Description)
    @Html.TextBoxFor(model => model.Description)

    <input type="hidden" value="@ViewBag.currentRestaurant.RestaurantId" name="RestaurantId"/>

    <input type="submit" value="Add new review" class="btn btn-primary"/>
}
<p>@Html.ActionLink("Show all restaurants", "Index")</p>